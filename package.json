{
  "name": "oazapfts",
  "version": "2.2.4",
  "description": "OpenApi TypeScript client generator",
  "main": "lib/index.js",
  "bin": {
    "oazapfts": "./lib/codegen/cli.js"
  },
  "scripts": {
    "test": "npm run generate-demo && with-server --grep 'Mocking API at \\d+' jest",
    "build": "tsc",
    "start": "open-api-mocker -p $PORT -s demo/petstore.json",
    "generate-demo": "npm run prepare && ./lib/codegen/cli.js ./demo/petstore.json ./demo/api.ts",
    "prepare": "npm run build && chmod +x ./lib/codegen/cli.js"
  },
  "keywords": [
    "openapi",
    "typescript"
  ],
  "author": "Felix Gnass",
  "license": "MIT",
  "repository": "cellular/oazapfts",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.5",
    "form-data": "^3.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "node-fetch": "^2.6.0",
    "open-api-mocker": "^1.3.1",
    "openapi-types": "^1.3.5",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "with-server": "^1.1.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^9.0.1",
    "lodash": "^4.17.15",
    "swagger2openapi": "^6.0.3",
    "typescript": "^3.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts",
      "d.ts"
    ],
    "moduleNameMapper": {
      "oazapfts/(.*)": "<rootDir>/src/$1"
    },
    "restoreMocks": true,
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
